apiVersion: v1
kind: Service
metadata:
  name: frontend
spec:
  selector:
    app: {{appName}}
    tier: frontend
  ports:
  - protocol: "TCP"
    port: 3000
    targetPort: 3000
  type: LoadBalancer
---
apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: frontend
spec:
  selector:
    matchLabels:
      app: {{appName}}
      tier: frontend
      track: stable
  replicas: 1
  template:
    metadata:
      labels:
        app: {{appName}}
        tier: frontend
        track: stable
    spec:
      containers:
      - name: hasm-elm-web
        image: "gcr.io/{{gcloudProjectID}}/hasm-elm-web:latest"
        ports:
            - containerPort: 3000
              name: "external"
              protocol: "TCP"
        
