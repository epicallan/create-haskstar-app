apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: smaccoun-ing
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: nginx
  labels:
    app: {{appName}}
spec:
  rules:
  - host: api.{{domain}}
    http:
      paths:
      - backend:
          serviceName: {{appName}}-backend-service
          servicePort: 8080
        path: /*
  tls:
  - hosts:
    - {{domain}}
    secretName: {{appName}}-com-tls