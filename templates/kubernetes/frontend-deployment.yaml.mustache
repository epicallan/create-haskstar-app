apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: frontend
spec:
  selector:
    matchLabels:
      app: {{appName}}
      tier: frontend
      track: stable
  replicas: 1
  template:
    metadata:
      labels:
        app: {{appName}}
        tier: frontend
        track: stable
    spec:
      containers:
      - name: {{appName}}-frontend
        image: "{{remoteDockerImage}}"
        ports:
            - containerPort: 3000
              name: "external"
              protocol: "TCP"
        
